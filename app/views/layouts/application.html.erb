<!DOCTYPE html>
<html>
<head>
  <title>Inquisit</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

  <!-- modal dialog for action confirmation -->
  <div id="warning-modal" class="modal hide fade">
    <div class="modal-header">
      <button type="button" class="close icon-cancel"
      data-dismiss="modal"></button>
      <h3>Inquisit</h3>
    </div>
    <div class="modal-body">
      <p id="warning-modal-message"></p>
    </div>
    <div class="modal-footer">
      <button data-dismiss="modal" class="btn">Cancel</button>
      <button data-dismiss="modal" class="btn btn-warning">Continue</button>
    </div>
  </div>

  <!-- collapsing div for site messages -->
  <div class="accordion" id="site-messages">
    <div id="collapse-alert" class="accordion-body collapse">
      <div class="alert" id="site-alert">
        <a href="#collapse-alert" class="accordion-toggle close icon-cancel"
          data-toggle="collapse"></a>
        <%= alert %>
      </div>
    </div>
    <div id="collapse-notice" class="accordion-body collapse">
      <div class="alert" id="site-notice">
        <a href="#collapse-notice" class="accordion-toggle close icon-cancel"
          data-toggle="collapse"></a>
        <%= notice %>
      </div>
    </div>
    <%= yield :site_messages %>
  </div>

  <div class="clearfix"></div>

  <div id="page-content">
    <%= yield %>
  </div>

</div>

<script type="text/javascript" charset="utf-8">
  <% if alert %>
    Inquisit.showSiteMessage("#collapse-alert");
  <% end %>

  <% if notice %>
    Inquisit.showSiteMessage("#collapse-notice", 3500);
  <% end %>

  <%= yield :javascript %>
</script>

</body>
</html>
