<div class="row-fluid">
  <div class="span1"></div>

  <div class="span11" id="question-block">

    <div id="topics"></div>
    <div id="title"></div>
    <div id="details"></div>

    <hr />
    <% var answersCount = question.get('answers').length %>
    <p><strong>
      <%= answersCount %>
      <%= answersCount === 1 ? "Answer" : "Answers" %>
    </strong></p>

  </div>
</div>

<div class="row-fluid" id="answer-form">
  <div class="span1"></div>

  <div class="span10">
    <p><strong>
      <% if (currentUser.get("anonymous")) { %>
        Anonymous
      <% } else { %>
        <% comma = (currentUser.get("bio")) ? "," : "" %>
        <a href = "#/users/<%= currentUser.id %>" class="user-link">
          <%= currentUser.escape("name")%></a><%= comma %>
        <%= currentUser.escape("bio") %>
      <% } %>
    </strong></p>

    <form action="/questions/<%= question.id %>/answers"
          method="get" accept-charset="utf-8" id="new-answer">
      <fieldset>
        <textarea name="answer[text]" placeholder="Add your answer"
          class="textarea"></textarea>
        <br />
        <button type="submit" class="btn-primary pull-right">Add Answer</button>
      </fieldset>
    </form>

    <div class="span1"></div>
  </div>
</div>

<ul class="unstyled" id="answers-list"></ul>
