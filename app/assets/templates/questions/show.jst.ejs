<div class="row-fluid">
  <div class="span1"></div>

  <div class="span11" id="question-block">

    <ul class="inline">
      <li>Topics:</li>
      <% if (question.get('topics').isEmpty()) { %>
        <li>none</li>
      <% } %>
      <% question.get('topics').each(function(topic) { %>
        <li><a href="#/topics/<%= topic.id %>">
          <%= topic.escape('title') %>
        </a></li>
      <% }); %>
      <li><a href="#" class="btn-edit" id="edit-topics">Edit</a></li>
    </ul>

    <h4><%= question.escape('title') %>
      <a href="#" class="btn-edit" class="edit-title">Edit</a></h4>
    <p><%= question.escape('description') %>
      <a href="#" class="btn-edit" ic="edit-description">Edit</a></p>

    <hr />
    <p><strong><%= question.get('answers').length %> Answers</strong></p>

  </div>
</div>

<div class="row-fluid" id="answer-form">
  <div class="span1"></div>

  <div class="span10">
    <p><strong>
      <% if (currentUser.get("anonymous")) { %>
        Anonymous
      <% } else { %>
        <a href = "#/users/<%= currentUser.id %>">
          <%= currentUser.escape("name")%></a>,
        <%= currentUser.escape("bio") %>
      <% } %>
    </strong></p>

    <form action="/questions/<%= question.id %>/answers"
          method="get" accept-charset="utf-8" id="new-answer">
      <fieldset>
        <textarea name="answer[text]" placeholder="Add your answer"
          class="textarea"></textarea>
        <br />
        <button type="submit" class="btn-primary pull-right">Add Answer</button>
      </fieldset>
    </form>

    <div class="span1"></div>
  </div>
</div>

<ul class="unstyled" id="answer-list"></ul>
