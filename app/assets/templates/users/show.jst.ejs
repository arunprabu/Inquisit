<div id="user-block" class="header-frame">

  <div id="name" class="title">
    <h3>
      <%= model.escape('name') %>
      <% if (isCurrentUser) { %>
        <a href="#" class="btn-edit" id="edit-name">
          <i class="icon-pencil"></i> Edit</a>
      <% } %>
    </h3>
  </div>
  <div id="bio">
    <p>
      <%= model.escape('bio') %>
      <% if (isCurrentUser) { %>
        <a href="#" class="btn-edit" id="edit-bio">
          <i class="icon-pencil"></i>
          <%= (model.get('bio')) ? "Edit" : "Add a Bio." %>
        </a>
      <% } %>
    </p>
  </div>
  <div id="topics"></div>

  <hr />
  <div class="info">
  </div>

  <div class="actions">
    <% if (isCurrentUser) { %>
      <a href="#warning-modal" role="button" data-toggle="modal"
        class="btn btn-danger">Delete Your Account</a>
    <% } %>
  </div>

  <div class="clearfix"></div>

</div>

<% var questionsCount = model.get('questions').length %>
<h3>
  <%= questionsCount %>
  <%= questionsCount === 1 ? "Question" : "Questions" %> Asked
</h3>
<ul id="questions-list" class="unstyled"></ul>

<% var answersCount = model.get('answers').length %>
<h3>
  <%= answersCount %>
  <%= answersCount === 1 ? "Answer" : "Answers" %> Given
</h3>
<ul id="answers-list" class="unstyled"></ul>
