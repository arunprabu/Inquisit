<div class="span1">
  <div class=rate-btns "pull-right">
    <a href="#/answers/<%= answer.id %>/upvote" class="rate-up">
      &nbsp;
    </a>
    <br />
    <a href="#/answers/<%= answer.id %>/downvote" class="rate-down">
      &nbsp;
    </a>
  </div>
</div>

<div class="span10">
  <p><strong>
    <% if (user) { %>
      <% comma = (user.get("bio")) ? "," : "" %>
      <a href = "#/users/<%= user.id %>" class="user-link">
        <%= user.escape("name")%></a><%= comma %>
      <%= user.escape("bio") %>
    <% } else { %>
      Anonymous
    <% } %>
  </strong></p>
  <p><%= answer.escape('text') %></p>
</div>

<div class="span1"></div>
<br />
